<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joshgenao.mainmenu" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".materialTest.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainMenu"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SubActivity"
            android:label="@string/title_activity_sub" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainMenu" />
        </activity>
        <activity
            android:name=".activities.VectorTestActivity"
            android:label="@string/title_activity_vector_test" >
        </activity>
    </application>

</manifest>
